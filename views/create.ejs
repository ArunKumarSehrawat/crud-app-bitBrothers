<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta http-equiv="X-UA-Compatible" content="IE=edge">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Create User</title>
     <link rel="stylesheet" href="style.css">
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

     <style>
          .validate {
               color : red;
               text-align: center;
          }
     </style>
</head>
<body>
     <div class="container">
          <h1 class="heading">Create a new user</h1>
          <form id="form" class="form shadow" action="/createUser" method="post">
               <input id="name" class="shadow-i" name="name" type="text" placeholder="Name" >
               <input id="username" class="shadow-i" name="username" type="text" placeholder="Username" >
               <input id="password" class="shadow-i" name="password" type="password" placeholder="Password" >
               <button class="btnn" type="submit">Create</button>
               <a class="a shadow" href="/">Cancel</a>
          </form>
          <p id="error" class="validate"></p>
          <% if(locals.error) { %>
               <p class="error">Name already exists</p>
          <% } %>
     </div>

     <script>
          let name = document.getElementById('name')
          let username = document.getElementById('username')
          let password = document.getElementById('password')            

          $('.btnn').click(function(event) {
               event.preventDefault()
               if(name.value && username.value && password.value) $('#form').submit()
               else {
                    if(!name.value) $('#error').text(`Name can't be empty`)
                    else if(!username.value) $('#error').text(`Username can't be empty`)
                    else if(!password.value) $('#error').text(`Password can't be empty`)
               }
          })
     </script>

</body>
</html>